<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>phonebook</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/css/search.css" type="text/css" rel="stylesheet">
    <link href="/css/main.css" type="text/css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <a href="/logout" class="waves-effect waves-light btn right red" 
           style="margin-top: 20px !important;">
            <i class="material-icons left">exit_to_app</i>Logout
        </a>
        <div class="row">
            <div class="col l5 m8 s10 offset-l3 offset-m1">
                <%- include partials/search.ejs %>
            </div>
            <div class="col l1 m2 s2">
                <div class="search-bar" style="background: #3d3d3d; max-width: 60px;">
                    <div class="browser-default">
                        <button onclick="s()" class="search-btn" id="add-btn"><i class="material-icons">add</i></button>
                    </div>
                </div>
            </div>

        </div>
        <div class="row hide" id="hidden-block">
            <form class="col s12" id="contact-form" enctype="multipart/form-data">
                <div class="row">
                    <div class="file-field input-field col s6 l2 offset-s3 offset-l5">
                        <div class="btn light-blue"
                            style="height: 100px; width: 100px; border-radius: 100px; padding: 17px; margin-left: 30px;">
                            <img src="./img/avatar.png">
                            <input type="file" name="avatar">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12 l6 offset-l3">
                        <i class="material-icons prefix">account_circle</i>
                        <input type="text" name="name" placeholder="Name    ">
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12 l6 offset-l3">
                        <i class="material-icons prefix">phone</i>
                        <input type="tel" name="phone" placeholder="Phone">
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12 l6 offset-l3">
                        <i class="material-icons prefix">email</i>
                        <input type="email" name="email" placeholder="Email">
                    </div>
                </div>
                <div class="row center-text">
                    <button class="btn waves-effect waves-light light-blue center col s2 offset-s5" type="submit"
                        name="action">Add
                        <i class="material-icons right">add</i>
                    </button>
                </div>
            </form>
        </div>
        <div class="row">
            <ul class="collection col s12 l6 offset-l3">
            </ul>
        </div>
    </div>
    <script type="text/html" id="contact-template">
        <li class="collection-item avatar">

            <img src="/contacts/{{id}}/avatar" alt="" class="circle"
                onerror="this.onerror=null; this.src='./img/avatar_black.png'">
            <span class="title">{{name}}</span>
            <p>{{phone}}<br>
                {{email}}
            </p>
            <div class="secondary-content">
                <a href="/edit/{{id}}"><i class="material-icons">create</i></a>
                <a href="#!" onclick="deleteContact('{{id}}'); return false;"><i class="material-icons">delete</i></a>
            </div>

        </li>
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/3.1.0/mustache.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.9.0/qs.min.js"></script>
    <script src="/js/script.js"></script>
    <%- include partials/include.ejs %>
</body>

</html>